<div class="flex md:flex-row flex-col md:justify-between justify-start items-start mt-10">
  <div class="w-full md:w-2/3">
    <%= render 'form', input: @input %>
  </div>
  <div class="w-full md:w-1/3 md:ml-6 md:mt-16">
    <% if @input.tests.empty? %>
      <p class="text-gray-400 text-lg">This input is not currently used in any tests.</p>
    <% else %>
      <p class="text-lg text-gray-400 mb-4">This input is used
        in <%= @input.tests.length == 1 ? 'one test' : `#{@input.tests.length} tests` %></p>
      <% @input.tests.each do |test| %>
        <%= link_to test_suite_path(test) do %>
          <div class="rounded-xl w-auto inline-flex mb-2 text-lg text-gray-700 hover:text-blue-500 font-medium bg-gray-100 dark:bg-opacity-10 dark:hover:bg-slate-600 hover:bg-white flex items-center justify-center p-3">
            <%= test.name %>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>

